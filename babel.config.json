{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-typescript"
  ],
  "ignore": [
    "./src/**/*.spec.ts"
  ],
  "plugins": [
    "babel-plugin-transform-typescript-metadata",
    [
      "@babel/plugin-proposal-decorators",
      {
        "legacy": true
      }
    ],
    [
      "@babel/plugin-proposal-class-properties",
      {
        "loose": false
      }
    ],
    [
      "module-resolver",
      {
        "alias": {
          "@controllers": "./src/controllers",
          "@core": "./src/core",
          "@routes": "./src/routes",
          "@schemas": "./src/schemas",
          "@": "./src"
        }
      }
    ]
  ],
}
